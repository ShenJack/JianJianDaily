<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/thumbnail_image"
            android:layout_height="88dp"
            android:layout_width="88dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="-1dp"
            android:layout_marginLeft="-15dp" />

        <TextView
            android:textSize="16sp"
            android:text="深夜食堂 · 我的张曼妮"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/thumbnail_image"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/thumbnail_image"
            android:layout_marginTop="8dp" />

    <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/card_share_overflow"-->
            <!--tools:layout_editor_absoluteY="0dp"-->
            <!--tools:layout_editor_absoluteX="0dp" />-->
        <ImageView
            android:background="@android:color/darker_gray"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/thumbnail_image"
            android:id="@+id/imageView" />
    </android.support.constraint.ConstraintLayout>
